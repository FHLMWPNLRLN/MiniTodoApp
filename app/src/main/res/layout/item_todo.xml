<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <CheckBox
        android:id="@+id/todo_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/todo_title"/>

    <TextView
        android:id="@+id/todo_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Todo Title"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/todo_checkbox"
        app:layout_constraintEnd_toStartOf="@id/todo_delete"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/todo_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textSize="12sp"
        android:background="@drawable/category_tag_background"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@id/todo_checkbox"
        app:layout_constraintTop_toBottomOf="@id/todo_title"/>

    <ImageButton
        android:id="@+id/todo_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@android:drawable/ic_delete"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/todo_title"
        app:layout_constraintBottom_toBottomOf="@id/todo_title"/>
</androidx.constraintlayout.widget.ConstraintLayout>
