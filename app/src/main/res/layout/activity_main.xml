<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Title -->
    <TextView
        android:id="@+id/title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="我的待办事项"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- Statistics -->
    <LinearLayout
        android:id="@+id/stats_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_text">

        <TextView
            android:id="@+id/total_count"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="总计：0"
            android:textSize="14sp"
            android:textColor="#666666"/>

        <TextView
            android:id="@+id/completed_count"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="已完成：0"
            android:textSize="14sp"
            android:textColor="#4CAF50"/>

        <TextView
            android:id="@+id/uncompleted_count"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="未完成：0"
            android:textSize="14sp"
            android:textColor="#FF9800"/>
    </LinearLayout>

    <!-- Input Section -->
    <EditText
        android:id="@+id/input_todo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="输入待办事项（最多200字）"
        android:imeOptions="actionDone"
        android:inputType="text"
        android:maxLength="200"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/button_add"
        app:layout_constraintTop_toBottomOf="@id/stats_layout"
        android:layout_marginTop="12dp"/>

    <Button
        android:id="@+id/button_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="添加"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/input_todo"
        app:layout_constraintBottom_toBottomOf="@id/input_todo"/>

    <!-- Todo List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_todo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/input_todo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Empty State -->
    <TextView
        android:id="@+id/empty_state"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="还没有待办事项\n点击上方添加一个吧！"
        android:textSize="16sp"
        android:textAlignment="center"
        android:gravity="center"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/input_todo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>

